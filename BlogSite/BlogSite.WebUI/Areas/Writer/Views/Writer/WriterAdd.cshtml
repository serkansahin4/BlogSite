@model BlogSite.WebUI.Areas.Writer.Models.ViewModels.Writer.WriterAddVM 
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgileri Düzenle</h4>
            <form class="forms-sample" method="post" asp-action="WriterAdd" asp-controller="Writer" asp-area="Writer" asp-antiforgery="true">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label for="exampleInputName1">Adı</label>
                    <input type="text" class="form-control" asp-for="Name" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword4" placeholder="Password">
                </div>


                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" asp-for="Image">
                    
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <textarea class="form-control" asp-for="About" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button class="btn btn-gradient-primary mr-2">Yazar Ekle</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>