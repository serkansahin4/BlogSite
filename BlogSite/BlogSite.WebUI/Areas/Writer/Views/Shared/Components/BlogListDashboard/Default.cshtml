@model IEnumerable<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th>  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                
                                <td>
                                    <img src="~/@item.BlogThumbnailImage" class="mr-2" alt="image"> @item.Title
                                </td>

                                <td>
                                    <label class="badge badge-gradient-success">@item.Category.Name</label>
                                </td>
                                <td> @item.CreatedDate.ToString("dd.MMM.yyyy") </td>
                                <td><a asp-action="Details" asp-controller="Blog" asp-area="" asp-route-id="@item.Id" class="btn btn-primary">Detaylar</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>