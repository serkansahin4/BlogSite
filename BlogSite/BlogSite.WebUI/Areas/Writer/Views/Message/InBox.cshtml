@model IEnumerable<Message>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}

<h1>InBox</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Konu</th>
            <th>Gönderen</th>
            <th>Tarih</th>
            <th>Mesajı Aç</th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var item in Model)
        {<tr>
            <td>@item.Id</td>
            <td>@item.Subject</td>
            <td>@item.SenderWriter.Name</td>
            <td>@item.Date</td>
            <td><a asp-route-id="@item.Id" asp-action="MessageDetails" asp-controller="Message" asp-area="Writer">Mesajı Aç</a></td>
        </tr>
            
        }
        
    </tbody>
</table>
<a href="#" class="btn btn-primary">Yeni Mesaj Oluştur</a>