
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Şimdi Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="/Register/Index" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            <input type="text" name="Name" class="form-control" id="validationDefault01" placeholder="" required="">
                            @Html.ValidationMessage("Name",new {@class="text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresiniz</label>
                            <input type="email" name="Email" class="form-control" id="validationDefault02" placeholder="" required="">
                            @Html.ValidationMessage("Email", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Profil Resmi</label>
                            <input type="text" name="ImagePath" class="form-control" id="validationDefault01" placeholder="" required="">
                            @Html.ValidationMessage("ImagePath", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola</label>
                            <input type="password" name="Password" class="form-control" id="password1" placeholder="" required="">
                            @Html.ValidationMessage("Password", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Parola Tekrarı</label>
                            <input type="password" name="PasswordConfirm" class="form-control" id="password2" placeholder="" required="">
                            @Html.ValidationMessage("PasswordConfirm", new { @class = "text-danger" })
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt</button>
                    <p>
                        <a href="#" id="Policy">Tüm şartları Okudum Kabul Ediyorum.</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</section>

<!--//main-->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $("#Policy").click(function () {
        swal("Verdiğiniz E-posta adresine haber mailleri gönderebiliriz!");
    })

</script>
